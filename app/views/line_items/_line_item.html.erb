<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>




	<td><%= line_item.quantity %>&times;</td>
	<td><%= line_item.product.title %></td>
	<td class="line_item_price"><%= number_to_currency(line_item.total_price) %></td>

	<td><%= button_to t('.decrease'), decrement_line_item_path(line_item), method: :put, remote: true, class: 'button' %></td>
	<td><%= button_to t('.delete'), line_item, method: :delete, data: {confirm: "Are you sure?"}, class: 'button' %></td>
</tr>





