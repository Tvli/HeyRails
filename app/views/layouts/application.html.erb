<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
	<div id="banner">
	<%= form_tag store_path, class: 'locale' do %>
		<%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s), onchange: 'this.form.submit()' %>
		<%= submit_tag 'submit' %>
		<%= javascript_tag "$('.locale input').hide()" %>
	<% end %>

		<%= image_tag("logoMe.jpg") %>
		<%= @page_title || t('.title') %>
	</div>

	<div id="columns">
		<div id="side">
		<p><%= Time.now.getgm %></p>
			<ul>
				<li><%= link_to t('.home'), store_path %></li>
				<li><a href="http://www.../faq"><%= t('.questions') %></a></li>
				<li><a href="http://www.../news"><%= t('.news') %></a></li>
				<li><a href="http://www.../contact"><%= t('.contact') %></a></li>
				
			</ul>

			<ul>
				<li><%= link_to t('.adminLogin'), admin_path %></li>
			</ul>

			<% if session[:user_id] %>
				<ul>
					<li><%= link_to t('.viweOrders'), orders_path %></li>
					<li><%= link_to t('.manageProducts'), products_path %></li>
					<li><%= link_to t('.viewUsers'), users_path %></li>
				</ul>

				<ul>
					<li><%= button_to t('.logOut'), logout_path, method: :delete, class: 'button' %></li>
				</ul>
			<% end %>

			<div id="cart">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
				<%= render @cart %>
				<% end %>
			<% end %>
			</div>
		</div>
	
   		
		<div id="main">
			<%= yield %>
		</div>
	</div>

</body>
</html>
