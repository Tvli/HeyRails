<h2>Your Cart</h2>
<table>
	<% @cart.line_items.each do |item| %>
	<tr>
		<td><%= item.quantity %>&times;</td>
		<td><%= item.product.title %></td>
		<td class="item_price"><%= number_to_currency(item.total_price) %></td>
		<td><%= button_to 'Delete', item, method: :delete, data: {confirm: "Are you sure?"}, class: 'button' %></td>
	</tr>
	<% end %>

	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>


</table>

<tr>
		<td><%= button_to 'Add new item', store_path, method: :get , class: 'button'%></td>
		<td><%= button_to 'Empty cart', @cart, method: :delete, data: {confirm: 'Are you sure?'} , class: 'button' %></td>
</tr>




